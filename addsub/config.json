{
    "name": "adder",
    "hyperparameters": [
        {
            "name": "WIDTH",
            "type": "integer",
            "default": "32"
        },
        {
            "name": "STAGE",
            "type": "integer",
            "default": "${WIDTH}"
        },
        {
            "name": "SIGNED",
            "type": "bit",
            "default": "0"
        }
    ],
    "ports": [
        ["a", "${WIDTH}", "in"],
        ["b", "${WIDTH}", "in"],
        ["s", "${WIDTH}", "out"]
    ],
    "architectures": {
        "pipelined_ripple_adder": {
            "includes": [
                {
                    "files": [["pipelined_ripple_adder.vhd", "__main__"]]
                }
            ],
            "stages": "${WIDTH}"
        },
        "vivado_adder": {
            "includes": [
                {
                    "files": [["vivado_adder.vhd", "__main__"]]
                }
            ],
            "stages": "${STAGE}",
            "reminder": "Remember to create a adder IP in Vivado named ip_vivado_adder_${__HYPERPARAMS_JOINED__} ..."
        }
    }
}